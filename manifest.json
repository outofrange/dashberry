{
  "name": "Dashberry",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Tab rotation and scrolling",
  "homepage_url": "http://www.github.com/outofrange",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "/background/dashberry.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Dashberry"
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs",
    "contextMenus"
  ],
  "content_scripts": [
  {
    "matches": ["https://*.visualstudio.com/*"],
    "js": ["/thirdparty/jquery.js", "/content/scroll.js"]
  }
]
}